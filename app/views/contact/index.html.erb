<% content_for :head do %>
	<title>Contact Us | Genesis Systems Inc</title>
	<meta name="description" content="Contact Genesis Systems Inc. for information on vital records applications and more. Genesis has been developing vital records software for over 30 years. ">
<% end %>

<!-- Banner -->
<section id="contact-banner">
	<div class="banner-container">
		<h1 class="banner-text display-3">Contact Us</h1>
	</div>
</section>

<!-- Contact Main-->
<section id="contact-main">
	<div class="container">
		<div class="row">
			<div class="col-sm contact-main-text">
				<h2 class="display-1">How can we help?</h2>
			</div>
			<div class="col-sm-1"></div>
			<div class="col-sm contact-main-form">
				<form class="contact-us-form">
				  <div class="form-row">
				   	<div class="form-group col-md-6">
				      <label for="inputNameFirst"></label>
				      <input type="text" class="form-control" id="inputNameFirst" placeholder="First Name*">
				    </div>
				    <div class="form-group col-md-6">
				      <label for="inputNameLast"></label>
				      <input type="text" class="form-control" id="inputNameLast" placeholder="Last Name*">
				    </div>
				  </div>

				  <div class="form-group">
				    <label for="inputCompany"></label>
				    <input type="text" class="form-control" id="inputCompany" placeholder="Company/Organization*">
				  </div>

				  <div class="form-row">
				    <div class="form-group col-md-6">
				      <label for="inputEmail"></label>
				      <input type="email" class="form-control" id="inputEmail" placeholder="Email*">
				    </div>
				    <div class="form-group col-md-6">
				      <label for="inputPhone"></label>
				      <input type="text" class="form-control" id="inputPhone" placeholder="Phone Number">
				    </div>   
				  </div>

				  <div class="form-group">
				    <label for="inputMessage"></label>
				    <textarea type="text" class="form-control" id="textareaCompany" placeholder="Message" rows="4"></textarea>
				  </div>

				  <button type="submit" class="btn btn-warning contact-form-submit text-muted">Submit</button>
				</form>
			</div>
		</div>
	</div>
</section>

